<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flightbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.ACCESS_ASSISTED_GPS" />
    <uses-permission android:name="android.permission.LOCATION" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow">
        
        <uses-library android:name="com.google.android.maps" />

        
        <activity
            android:name="com.flightbook.activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
        		<action android:name="android.nfc.action.NDEF_DISCOVERED"/>
		        <category android:name="android.intent.category.DEFAULT"/>
		        <data android:mimeType="application/com.flightbook"/>
    		</intent-filter>
        </activity>
        <activity
            android:name="com.flightbook.activity.VolActivity"
            android:label="@string/title_activity_vol" 
            android:icon="@drawable/vol">
        </activity>
        <activity
            android:name="com.flightbook.activity.FlightBookActivity"
            android:label="@string/title_activity_flightbook" >
        </activity>
        <activity
            android:name="com.flightbook.activity.VolsActivity"
            android:label="@string/title_activity_vols" 
            android:icon="@drawable/recorder"
            android:parentActivityName="com.flightbook.activity.VolActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.VolActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.HangarActivity"
            android:label="@string/title_activity_hangar"
            android:icon="@drawable/hangar">
        </activity>
        <activity
            android:name="com.flightbook.activity.AddAeronefActivity"
            android:label="@string/title_activity_addAeronef"
            android:icon="@drawable/hangar">
        </activity>
        <activity
            android:name="com.flightbook.activity.SiteActivity"
            android:label="@string/title_activity_site"
            android:icon="@drawable/index">
        </activity>
        <activity
            android:name="com.flightbook.activity.AddSiteActivity"
            android:label="@string/title_activity_addSite"
            android:icon="@drawable/index">
        </activity>
        <activity
            android:name="com.flightbook.activity.MeteoActivity"
            android:label="@string/title_activity_meteo"
            android:icon="@drawable/meteo"
            android:parentActivityName="com.flightbook.activity.VolActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.VolActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.RadiosActivity"
            android:label="@string/title_activity_radios"
            android:icon="@drawable/ff9"
            android:parentActivityName="com.flightbook.activity.VolActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.VolActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.RadioActivity"
            android:label="@string/title_activity_radio"
            android:icon="@drawable/ff9"
            android:parentActivityName="com.flightbook.activity.RadiosActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.RadiosActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.AddSwitchPotarActivity"
            android:label="@string/title_activity_switchpotar"
            android:icon="@drawable/inter">
        </activity>
        <activity
            android:name="com.flightbook.activity.CarteActivity"
            android:label="@string/title_activity_carte"
            android:icon="@drawable/carte"
            android:parentActivityName="com.flightbook.activity.VolActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.VolActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.ChecklistsActivity"
            android:label="@string/title_activity_checklist"
            android:icon="@drawable/checklist"
            android:parentActivityName="com.flightbook.activity.VolActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.VolActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.ChecklistActivity"
            android:label="@string/title_activity_checklist"
            android:icon="@drawable/checklist"
            android:parentActivityName="com.flightbook.activity.ChecklistsActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.ChecklistsActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.UpdateChecklistActivity"
            android:label="@string/title_activity_checklist"
            android:icon="@drawable/checklist"
            android:parentActivityName="com.flightbook.activity.ChecklistsActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.ChecklistsActivity" />
        </activity>
        <activity
            android:name="org.achartengine.GraphicalActivity"
            android:label="@string/title_activity_chart_time"
            android:icon="@drawable/chart"
            android:parentActivityName="com.flightbook.activity.VolsActivity" >
            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flightbook.activity.VolsActivity" />
        </activity>
        <activity
            android:name="com.flightbook.activity.AccusActivity"
            android:label="@string/title_activity_accu"
            android:icon="@drawable/accu_white">
        </activity>
        <activity
            android:name="com.flightbook.activity.AddAccuActivity"
            android:label="@string/title_activity_addAccu"
            android:icon="@drawable/accu_white">
        </activity>


        <receiver android:name="com.flightbook.widget.FlightWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
        
        <!--  service android:name=".service.SpeechService"/-->
        
        <!--  service android:name=".service.GpsService"/-->
        
    </application>

    
    
</manifest>