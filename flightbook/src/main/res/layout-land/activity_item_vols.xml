<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:id="@+id/item_vols">
	
	
	<TextView android:id="@+id/date" 
	    android:text="@string/date"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:textSize="10sp"
		android:layout_centerVertical="true">
	</TextView>
	
	<TextView android:id="@+id/name"
	    android:text="string/aeronef"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:layout_toRightOf="@+id/date">
	</TextView>
	
	<TextView android:id="@+id/tempsVol"
	    android:text="@string/vol"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
		android:textSize="20sp"
        android:layout_toRightOf="@+id/name">
	</TextView>
	
	<TextView android:id="@+id/tempsMoteur"
	    android:text="@string/moteur"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tempsVol">
	</TextView>


    <TextView android:id="@+id/lieu"
        android:text="@string/lieu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tempsMoteur">
    </TextView>

    <TextView android:id="@+id/note"
        android:text="@string/note"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lieu">
    </TextView>

    <ImageButton
        android:id="@+id/deleteVol"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toRightOf="@+id/note"
        android:background="#00000000"
        android:contentDescription="@string/delete"
        android:src="@drawable/delete" />
	
	
</RelativeLayout>