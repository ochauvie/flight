<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewAeronef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text="@string/aeronef" />

    <EditText
        android:id="@+id/editTextAeronef"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAeronef"
        android:layout_alignBottom="@+id/textViewAeronef"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="text" >
		
        <!-- requestFocus /-->
    </EditText>

    <Button
        android:id="@+id/selectAeronef"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextAeronef"
        android:layout_alignParentRight="true"
        android:text="@string/selectAeronef" />
    
    
    
    <TextView
        android:id="@+id/textViewMinVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextAeronef"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:text="@string/minVol" />
    
    <EditText
        android:id="@+id/editTextMinVol"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMinVol"
        android:layout_alignBottom="@+id/textViewMinVol"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewMot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextMinVol"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/moteur" />
    
    <EditText
        android:id="@+id/editTextMinMot"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/textViewMinMot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextMinVol"
        android:layout_marginLeft="150dp"
        android:text="@string/minMot" />
    
    <EditText
        android:id="@+id/editTextSecMot"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignBottom="@+id/textViewSecMot"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:ems="10"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/textViewSecMot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextMinVol"
        android:layout_marginLeft="240dp"
        android:text="@string/secMot" />
    
    
    <Button
        android:id="@+id/saveVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewMot"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/saveVol" />

    
    <Button
        android:id="@+id/viewVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@+id/saveVol"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="16dp"
        android:text="@string/viewVol" />
    
    
    <Button
        android:id="@+id/deleteVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/saveVol" 
        android:text="@string/deleteVol" />

    
    <TextView
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/saveVol"
        android:ems="10" />
    
    
</RelativeLayout>
