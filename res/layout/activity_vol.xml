<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:id="@+id/relativeLayoutVol">
		
	    <TextView
	        android:id="@+id/textViewDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="34dp"
            android:text="@string/date" />
	    
	    <EditText
	        android:id="@+id/flightDate"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewDate"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="90dp"
	        android:ems="10"
            android:inputType="textCapWords" >
		</EditText>
				    
	     <ImageButton
	        android:id="@+id/selectDate"
	        android:layout_width="96dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/textViewDate"
	        android:layout_alignParentRight="true"
	        android:contentDescription="@string/date"
	        android:background="#00000000"
            android:src="@drawable/calendrier" />
	    
	    
	    
	    <TextView
	        android:id="@+id/textViewAeronef"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textViewDate"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="34dp"
	        android:text="@string/aeronef" />
	
	    <EditText
	        android:id="@+id/editTextAeronef"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewAeronef"
	        android:layout_alignBottom="@+id/textViewAeronef"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="90dp"
	        android:ems="10"
            android:inputType="textCapWords" >
	    </EditText>
	
	    <ImageButton
	        android:id="@+id/selectAeronef"
	        android:layout_width="96dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="60dp"
	        android:layout_alignBottom="@+id/editTextAeronef"
	        android:layout_alignParentRight="true"
	        android:contentDescription="@string/selectAeronef"
	        android:background="#00000000"
	        android:src="@drawable/hangar" />
	    
	    <TextView
	        android:id="@+id/textViewMinVol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/editTextAeronef"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="17dp"
	        android:text="@string/minVol" />
	    
	    <EditText
	        android:id="@+id/editTextMinVol"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewMinVol"
	        android:layout_alignBottom="@+id/textViewMinVol"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="90dp"
	        android:ems="10"
            android:inputType="number"
	        />
	
	    <TextView
	        android:id="@+id/textViewUnitVol"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewMinVol"
	        android:layout_alignBottom="@+id/textViewMinVol"
	        android:layout_marginLeft="245dp"
	        android:layout_marginTop="16dp"
	        android:text="@string/min" />
	    
	    <TextView
	        android:id="@+id/textViewMot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/editTextMinVol"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="16dp"
	        android:text="@string/moteur" />
	    
	    <EditText
	        android:id="@+id/editTextMinMot"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewMot"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="90dp"
	        android:ems="10"
            android:inputType="number" />
	    
	    <TextView
	        android:id="@+id/textViewMinMot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewMot"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/editTextMinVol"
	        android:layout_marginLeft="150dp"
	        android:text="@string/min" />
	    
	    <EditText
	        android:id="@+id/editTextSecMot"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewMot"
	        android:layout_alignBottom="@+id/textViewSecMot"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="180dp"
	        android:ems="10"
	        android:inputType="number" />
	    
	    <TextView
	        android:id="@+id/textViewSecMot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewMot"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/editTextMinVol"
	        android:layout_marginLeft="240dp"
	        android:text="@string/sec" />


        <TextView
            android:id="@+id/textViewTittleAccuPropultion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMot"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:text="@string/accu_propultion" />


        <EditText
            android:id="@+id/textViewAccuPropultion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewTittleAccuPropultion"
            android:layout_alignBottom="@+id/textViewTittleAccuPropultion"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:ems="10"
            android:inputType="textCapSentences"
            android:layout_alignRight="@+id/editTextSecMot" />


        <ImageButton
            android:id="@+id/selectAccuPropultion"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/selectAccu"
            android:background="#00000000"
            android:src="@drawable/accu"
            android:layout_alignBottom="@+id/textViewNote"
            android:layout_toLeftOf="@+id/site"
            android:layout_alignParentRight="true"
            android:baselineAlignBottom="false" />


        <TextView
	        android:id="@+id/textViewNote"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textViewTittleAccuPropultion"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="17dp"
            android:text="@string/note" />




	    <EditText
	        android:id="@+id/editTextNote"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewNote"
	        android:layout_alignBottom="@+id/textViewNote"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="90dp"
	        android:ems="10"
            android:inputType="textCapSentences"
            android:layout_alignRight="@+id/editTextSecMot" />
	    
	    <TextView
	        android:id="@+id/textViewLieu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textViewNote"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="17dp"
	        android:text="@string/lieu" />
	    
	    <EditText
	        android:id="@+id/editTextLieu"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/textViewLieu"
	        android:layout_alignBottom="@+id/textViewNote"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="90dp"
	        android:ems="10"
            android:minLines="4"
            android:inputType="textMultiLine"
            android:layout_alignRight="@+id/textViewSecMot" />
	    
	      <ImageButton
	        android:id="@+id/site"
	        android:layout_width="44dp"
	        android:layout_height="44dp"
              android:contentDescription="@string/gps"
	        android:background="#00000000"
	        android:src="@drawable/index"
              android:layout_below="@+id/textViewLieu"
              android:layout_alignParentRight="true"
              android:layout_marginRight="5dp" />

            <ImageButton
                android:id="@+id/gps"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:contentDescription="@string/lieu"
                android:background="#00000000"
                android:src="@drawable/gps"
                android:layout_below="@+id/site"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />
	    
	    <TextView
	        android:id="@+id/log"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/textViewLieu"
            android:layout_alignParentLeft="true" />
	    

	</RelativeLayout>

</ScrollView>
