<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewAeronef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:text="@string/aeronef" />

    <EditText
        android:id="@+id/editTextAeronef"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAeronef"
        android:layout_alignBottom="@+id/textViewAeronef"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="text" >
		
        <!-- requestFocus /-->
    </EditText>

    <ImageButton
        android:id="@+id/selectAeronef"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextAeronef"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/selectAeronef"
        android:background="#00000000"
        android:src="@drawable/hangar" />
    
    
    <TextView
        android:id="@+id/textViewMinVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextAeronef"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:text="@string/minVol" />
    
    <EditText
        android:id="@+id/editTextMinVol"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMinVol"
        android:layout_alignBottom="@+id/textViewMinVol"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewUnitVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMinVol"
        android:layout_alignBottom="@+id/textViewMinVol"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="16dp"
        android:text="@string/minMot" />
    
    <TextView
        android:id="@+id/textViewMot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextMinVol"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/moteur" />
    
    <EditText
        android:id="@+id/editTextMinMot"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/textViewMinMot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextMinVol"
        android:layout_marginLeft="150dp"
        android:text="@string/minMot" />
    
    <EditText
        android:id="@+id/editTextSecMot"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignBottom="@+id/textViewSecMot"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:ems="10"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/textViewSecMot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMot"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextMinVol"
        android:layout_marginLeft="240dp"
        android:text="@string/secMot" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewMot" >
			    
			    <ImageButton
			        android:id="@+id/saveVol"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="5dp"
			        android:layout_marginTop="16dp"
			        android:background="#00000000"
			        android:contentDescription="@string/saveVol"
			        android:src="@drawable/save" />
			
			
			    <ImageButton
			        android:id="@+id/viewVol"
			        android:layout_width="100dp"
			        android:layout_height="80dp"
			        android:layout_marginLeft="50dp"
			        android:layout_marginTop="12dp"
			        android:background="#00000000"
			        android:contentDescription="@string/viewVol"
			        android:src="@drawable/recorder" />

			    <ImageButton
			        android:id="@+id/deleteVol"
			        android:layout_width="100dp"
			        android:layout_height="80dp"
			        android:layout_marginLeft="0dp"
			        android:layout_marginTop="12dp"
			        android:background="#00000000"
			        android:contentDescription="@string/viewVol"
			        android:src="@drawable/reset" />
			    
	</LinearLayout>
    
    <TextView
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/saveVol"
        android:ems="10" />

    
    
</RelativeLayout>
