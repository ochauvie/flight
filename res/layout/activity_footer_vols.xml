<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:id="@+id/footer_vols">

    <TextView android:id="@+id/total"
        android:text="@string/total"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">
    </TextView>


    <TextView android:id="@+id/nbDate"
        android:text="@string/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@+id/total"
        android:layout_alignParentLeft="true">
    </TextView>

    <TextView android:id="@+id/nbVol"
        android:text="@string/vol"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp">
    </TextView>

	<TextView android:id="@+id/totalVol"
	    android:text="@string/vol"
	    android:textStyle="bold"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textSize="20sp"
		android:layout_alignParentLeft="true"
        android:layout_marginLeft="190dp">
	</TextView>

    <ImageButton
        android:id="@+id/importVols"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="false"
        android:background="#00000000"
        android:contentDescription="@string/menu_importVols"
        android:src="@drawable/import_data"
        android:layout_alignParentRight="true" />


</RelativeLayout>